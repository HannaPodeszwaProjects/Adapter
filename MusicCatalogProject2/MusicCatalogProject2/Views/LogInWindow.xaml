<Window x:Class="MusicCatalogProject2.LogInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicCatalogProject2"
        mc:Ignorable="d"
        Title="Music Catalog" Height="180" Width="270">
    <Grid Margin="0,0,0,0" RenderTransformOrigin="0.62,0.468">
        <Label Content="Login" HorizontalAlignment="Left" Margin="18,19,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.144,-0.312" Height="26" Width="39"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="18,56,0,0" VerticalAlignment="Top" Height="26" Width="60"/>
        <TextBox Text="{Binding loginTextBox}" HorizontalAlignment="Left" Margin="87,21,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="144" Height="22" TextChanged="LoginChanged"/>
        <PasswordBox PasswordChanged="PasswordChanged" HorizontalAlignment="Left" Margin="87,58,0,0" VerticalAlignment="Top" Width="144" Height="22"/>
        <Button Content="Log in" HorizontalAlignment="Left" Margin="18,95,0,0" VerticalAlignment="Top" Click="LogInButtonClick" Width="213" Height="22
                "/>

    </Grid>
</Window>
